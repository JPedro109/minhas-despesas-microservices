{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": false,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"outDir": "dist",
		"typeRoots": [
			"./node_modules/@types"
		],
		"rootDirs": [
			"src", 
		],
		"paths": {
		  "@/*": ["*"],
		}
	},
	"include": [
		"src",
		"tests"
	]
}